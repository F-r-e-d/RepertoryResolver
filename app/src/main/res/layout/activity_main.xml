<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.repertoryresolver.MainActivity">


    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:hint="@string/name" />

    <EditText
        android:id="@+id/number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/number"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/addRepertory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="addRepertory"
        android:text="@string/addRepertory" />

    <Button
        android:id="@+id/showRepertory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="showAllRepertory"
        android:text="@string/showRepertory" />

    <Button
        android:id="@+id/deleteRepertory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="deleteAllRepertory"
        android:text="@string/deleteRepertory" />

</LinearLayout>